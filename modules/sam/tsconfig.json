{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": ["src/*"]
    },
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2016"
  },
  "include": ["**/*", "src/index.ts"],
  "exclude": ["node_modules"]
}
