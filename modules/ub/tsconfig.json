{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "include": ["src/**/*"]
}
